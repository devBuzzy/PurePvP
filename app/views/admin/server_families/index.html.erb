<div class='row'>
	<div class='page-header'>
		<%= link_to 'New Family', new_admin_server_family_path, class: 'btn btn-primary pull-right' %>
		<h1>Server Admin Panel<small> Manage Server Groups</small></h1>
	</div>
	<div class='col-md-2'>
		<%= render '/forem/admin/base/side' %>
	</div>
	<div class='col-md-10'>
		<table class='table table-striped'>
			<thead>
				<tr>
					<th>Family</th>
					<th>Display</th>
					<th>Priority</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @families.each do |family| %>
				<tr>
					<td><%= link_to family.gamemode, admin_server_family_path(family) %></td>
					<td><%= link_to family.display,admin_server_family_path(family) %></td>
					<td><%= family.priority %></td>
					<td><%= link_to 'Edit', edit_admin_server_family_path(family) %></td>
					<td><%= link_to 'Delete', admin_server_family_path(family), method: :delete, :data => { confirmation: 'Are you sure you want to delete this server group?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>