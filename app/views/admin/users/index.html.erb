<div class='row'>
	<div class='page-header'>
		<h1>User Admin Panel<small> <%= @users.count %></small></h1>
	</div>
	<div class='col-md-2'>
		<%= render '/forem/admin/base/side' %>
	</div>
	<div class='col-md-10'>
		<%= paginate(@users) %>
		<table id='users' class='index table table-striped'>
			<thead>
				<tr>
					<th>Username</th>
					<th>View</th>
					<th>Edit</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= profile_link(user) %></td>
					<td><%= link_to 'View', admin_user_path(user) %></td>
					<td><%= link_to 'Edit', admin_user_path(user) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= paginate(@users) %>
	</div>
</div>