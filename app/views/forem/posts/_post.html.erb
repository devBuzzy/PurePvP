      <div class='contents'>
        <div class='user col-md-2'>
          <div class='icon'><%= avatar(post.user, :size => 100) %></div>
          <div class='username' align='center'>
            <% if post.user.is_a?(Forem::NilUser) %>
            <%= t(:deleted) %>
            <% else %>
            <%= link_to post.user.forem_name, main_app.profile_path(post.user) %>
            <% end %>
          </div>
        </div>

        <div class='contents col-md-10'>
          <%= forem_format(post.text) %>

          <% if post.reply_to %>
          <div class='in-reply-to'>
            <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user.forem_name}", "#post-#{post.reply_to.id}" %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
  <% if forem_user %>
  <div class='row'>
    <div class='col-md-2'>
    </div>
    <div class='col-md-10'>
      <%= post_time_tag(post) %>
      <% unless hide_ribbon %>
      <% if can?(:reply, post.topic) %>
      <% if post.topic.can_be_replied_to? %>
      <%= link_to t('reply', :scope => 'forem.topic'), forem.new_forum_topic_post_path(post.forum, post.topic, :reply_to_id => post.id)%>
      <%= link_to t('quote', :scope => 'forem.topic'), forem.new_forum_topic_post_path(post.forum, post.topic, :reply_to_id => post.id, :quote => true) %>
      <% end %>
      <% end %>
      <% if post.owner_or_admin?(forem_user) %>
      <% if can?(:edit_post, post.topic.forum) %>
      <%= link_to t('edit', :scope => 'forem.post'), forem.edit_forum_topic_post_path(post.forum, post.topic, post) %>
      <% end %>
      <% if can?(:destroy_post, post.topic.forum) %>
      <%= link_to t('delete', :scope => 'forem.topic'), forem.forum_topic_post_path(post.forum, post.topic, post), :method => :delete, data: { :confirm => t("are_you_sure") } %>
      <% end %>
      <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
