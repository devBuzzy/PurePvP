<%= simple_form_for [forem, :admin, @topic.forum, @topic] do |f| %>
  <%= f.input :subject, input_html: { class: 'form-control' } %>
  <br />
  <%= f.association :forum , :label => "Forum", input_html: { class: 'form-control' } %>
  <br />
  <%= f.label :locked %>
  <%= f.check_box :locked %>
  <br />
  <%= f.label :pinned %>
  <%= f.check_box :pinned %>
  <br />
  <%= f.label :hidden %>
  <%= f.check_box :hidden %>

  <br />
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
