<div class='row'>
  <div class='page-header'>
    <%= link_to t("forem.admin.category.new_link"), forem.new_admin_category_path, :class => "btn btn-primary pull-right" %>
    <h1>Admin Panel <small><%= t("forem.admin.category.index") %></small></h1>
  </div>
  <div class='col-md-2'>
    <%= render '/forem/admin/base/side' %>
  </div>
  <div class='col-md-10'>
    <table id='forums' class='forums table-striped table' cellspacing='0'>
      <thead>
        <tr>
          <th><%= t('category', :scope => 'forem.admin.categories') %></th>
          <th><%= t('edit', :scope => 'forem.admin.categories') %></th>
          <th><%= t('delete', :scope => 'forem.admin.categories') %></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr class="forum <%= cycle("odd", "even") %>">
          <td>
            <%= forem_emojify(category.name) %>
          </td>
          <td><%= link_to t('edit', :scope => 'forem.admin.categories'), forem.edit_admin_category_path(category), :class => "btn btn-info" %></td>
          <td><%= link_to t('delete', :scope => 'forem.admin.categories'), forem.admin_category_path(category), :method => :delete, 
            data: { :confirm => t("delete_confirm", :scope => 'forem.admin.categories') }, :class => "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>